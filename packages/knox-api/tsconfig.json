{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/errors": ["src/errors"],
      "~/types": ["src/types"],
      "~/utils": ["src/utils"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["dist", "node_modules"]
}
