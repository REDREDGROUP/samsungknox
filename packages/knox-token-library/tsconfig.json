{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src", "scripts", "tsup.config.ts"],
  "exclude": ["dist", "node_modules"],
  "ts-node": {
    "esm": true,
    "rootDir": "."
  }
}
